

<div class="container">
    <div class="section">
        <div class="row">
            <div class="mb-5 pb-5 col-md-8 offset-md-2">

                <nav class="recruit-breadcrumb" aria-label="breadcrumb mt-5 mb-5">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a class="not-active" href="/RecruitZone/Index">Home</a></li>
                        <li class="breadcrumb-item"><a class="not-active" href="/Candidates/All">Candidates</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Details</li>
                    </ol>
                </nav>

                <div class="page-header text-center mb-5 mt-5">
                    <h2 id="tables">Candidate Details</h2>
                </div>


                <div class="card text-center">
                    <div class="card-header">
                        <h5 class="card-title">@Model.FirstName @Model.LastName </h5>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item"><span class="text-black-50">Email: </span>@Model.Email</li>
                            <li class="list-group-item"><span class="text-black-50">Date of Birth: </span> @Model.BirthDate</li>
                            <li class="list-group-item"></li>
                        </ul>
                    </div>
                    <div class="pt-0 card-body">
                        <p class="text-black-50 card-text">Bio: </p>
                        <p class="card-text">@Model.Bio</p>

                        <div class="list-group mt-4">
                            <button type="button" class="list-group-item list-group-item-action active bg-info">
                                Skills
                            </button>

                            @foreach (var skill in Model.CandidateSkills)
                            {
                <button type="button" class="list-group-item list-group-item-action" disabled>@skill.Name</button>}
                        </div>

                        @if (Model.Interviews == 0)
                        {

            <a class="btn btn-block btn-success text-white mb-2 mt-3" href="/Interviews/Add?id=@Model.Id">Add Interview</a>}

                        <a href="/Candidates/Edit?id=@Model.Id" class="btn btn-primary mt-3">Edit</a>

                    </div>

                </div>

            </div>
        </div>
    </div>
</div>

<script>$(document).ready(function () {
        $(".active").removeClass("active");
        $("#recruit").addClass("active");
});</script>