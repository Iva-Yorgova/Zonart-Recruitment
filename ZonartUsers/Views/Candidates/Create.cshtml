@using Microsoft.AspNetCore.Identity

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager


<div class="create-candidate-box">

    <nav class="recruit-breadcrumb w-50 m-auto" aria-label="breadcrumb">
        <ol class="breadcrumb p-0">
            <li class="breadcrumb-item"><a class="not-active" href="/RecruitZone/Index">Home</a></li>
            <li class="breadcrumb-item"><a class="not-active" href="/Candidates/All">Candidates</a></li>
            <li class="breadcrumb-item active" aria-current="page">Create</li>
        </ol>
    </nav>

    <h2 class="text-lg-center mt-5">Create Candidate</h2>
    <hr class="bg-primary w-50">
    <form class="my-custom-form pb-5 mx-auto w-50 mt-5" method="post">
        <div>
            <div class="text-dark d-flex justify-content-center">
                <label for="name" class="h3 mb-2">First Name</label>
            </div>
            <input type="text" class="form-control" id="name" name="firstName" />
        </div>
        <div>
            <div class="text-dark d-flex justify-content-center">
                <label for="name" class="h3 mb-2">Last Name</label>
            </div>
            <input type="text" class="form-control" id="name" name="lastName" />
        </div>
        <div>
            <div class="text-dark d-flex justify-content-center">
                <label for="name" class="h3 mb-2">Email</label>
            </div>
            <input type="text" class="form-control" id="name" name="email" />
        </div>
        <div>
            <div class="text-dark d-flex justify-content-center">
                <label for="name" class="h3 mb-2">Bio</label>
            </div>
            <textarea type="text" class="form-control" id="name" name="bio"></textarea>
        </div>
        <div>
            <div class="text-dark d-flex justify-content-center">
                <label for="name" class="h3 mb-2">Birthdate</label>
            </div>
            <input type="text" class="form-control" id="name" name="birthDate" />
        </div>
        <div>
            <div class="text-dark d-flex justify-content-center">
                <label for="name" class="h3 mb-2">Skill</label>
            </div>
            <input type="text" class="form-control" id="name" name="skill" />
        </div>

        <h2 class="text-center mt-5">Recruiter Information</h2>
        <hr class="bg-primary w-100">
        <div>
            <div class="text-dark d-flex justify-content-center">
                <label for="name" class="h3 mb-2">Last Name</label>
            </div>
            <input type="text" class="form-control" id="name" name="recruiterName" />
        </div>
        <div>
            <div class="text-dark d-flex justify-content-center">
                <label for="name" class="h3 mb-2">Email</label>
            </div>
            <input type="text" class="form-control" id="name" name="recruiterEmail" />
        </div>
        <div>
            <div class="text-dark d-flex justify-content-center">
                <label for="name" class="h3 mb-2">Country</label>
            </div>
            <input type="text" class="form-control" id="name" name="recruiterCountry" />
        </div>

        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-block btn-primary text-white text-uppercase mb-3 mt-5">Create</button>
        </div>
    </form>
</div>

<script>$(document).ready(function () {
        $(".active").removeClass("active");
        $("#recruit").addClass("active");
});</script>
