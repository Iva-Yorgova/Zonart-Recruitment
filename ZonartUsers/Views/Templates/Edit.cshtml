@using Microsoft.AspNetCore.Identity

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@{
    ViewData["Title"] = "Template Edit";
}

@model TemplateListingViewModel

<div class="container">

    <div class="add-template-box">

        <div class="offset-sm-1 col-sm-10 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6 offset-md-3 col-md-6">

            <nav class="recruit-breadcrumb" aria-label="breadcrumb">
                <ol class="breadcrumb p-0">
                    <li class="breadcrumb-item"><a class="not-active" href="/Templates/All">Templates</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Edit</li>
                </ol>
            </nav>

            <div class="add-template-title text-center text-dark mb-5 pb-5">
                <h1 class="text-center">Edit Template</h1>
            </div>

            <form method="post">

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" placeholder="">
                    <span asp-validation-for="Name" class="small text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description"></label>
                    <input asp-for="Description" class="form-control" placeholder="">
                    <span asp-validation-for="Description" class="small text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Category"></label>
                    <input asp-for="Category" class="form-control" placeholder="">
                    <span asp-validation-for="Category" class="small text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Price"></label>
                    <input asp-for="Price" class="form-control" placeholder="">
                    <span asp-validation-for="Price" class="small text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ImageUrl"></label>
                    <input asp-for="ImageUrl" class="form-control" placeholder="">
                    <span asp-validation-for="ImageUrl" class="small text-danger"></span>
                </div>

                <input class="btn btn-primary mt-3" type="submit" value="Save" />
            </form>
        </div>
    </div>
</div>

    <script>
        $(document).ready(function () {
            $(".active").removeClass("active");
            $("#templates").addClass("active");
        });
    </script>
