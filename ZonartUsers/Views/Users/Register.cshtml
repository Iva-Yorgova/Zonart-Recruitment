@model RegisterUserModel

    <div class="container">
        <div class="row-custom">
            <div class="offset-sm-1 col-sm-10 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6 offset-md-3 col-md-6" style="padding-left:30px">

                <div class="text-center text-dark mb-5" style="margin-top:120px; margin-bottom:70px">
                    <h2 class="title-contact">Register</h2>
                </div>

                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-group">

                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control mb-0" placeholder="">
                        <span asp-validation-for="Email" class="small text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" type="password" class="form-control mb-0" placeholder="">
                        <span asp-validation-for="Password" class="small text-danger mt-2"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ConfirmPassword"></label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control mb-0" placeholder="">
                        <span asp-validation-for="ConfirmPassword" class="small text-danger mt-2"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="FullName"></label>
                        <input asp-for="FullName" class="form-control mb-0" placeholder="">
                        <span asp-validation-for="FullName" class="small text-danger mt-2"></span>
                    </div>

                    <div>
                        <input class="mt-lg-30 mt-30 col-lg-14 btn btn-block spacing-lg" type="submit" value="Register" style="margin-bottom: 100px" />
                    </div>

                </form>
            </div>
        </div>
    </div>



    <script>
    $(document).ready(function () {
        $(".active").removeClass("active");
        $("#register").addClass("active");
    });
    </script>
