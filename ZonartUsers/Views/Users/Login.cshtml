@model LoginUserModel


    <div class="container">
        <div class="row-custom">
            <div class="mb-5 offset-sm-1 col-sm-10 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6 offset-md-3 col-md-6">

                <div class="login-title text-center text-dark mb-4">
                    <h2 class="title-contact">Login</h2>
                </div>

                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control mb-0" placeholder="">
                        <span asp-validation-for="Email" class="small text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" type="password" class="form-control mb-0" placeholder="">
                        <span asp-validation-for="Password" class="small text-danger mt-2"></span>
                    </div>

                    <div>
                        <input class="mb-5 mt-lg-30 mt-30 col-lg-14 btn btn-block spacing-lg" type="submit" value="Login"/>
                    </div>

                </form>
            </div>
        </div>
    </div>



    <script>
    $(document).ready(function () {
        $(".active").removeClass("active");
        $("#login").addClass("active");
    });
    </script>
