@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<div class="nav-right">

@if (SignInManager.IsSignedIn(User))
{

        <a  class="nav-link text-light" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@User.Identity.Name!</a>
 

        <form class="form-inline" >    
            <a class="user-logout nav-right" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" style="float:right; font-weight: 100; width: 57px; height: 50px" id="logout" title="Logout">
                <img class="logout-user" alt="Logout" />
            </a>
        </form>

}
else
{    

        <a style="font-weight:200" asp-area="Identity" asp-page="/Account/Register">Register</a>

 
        <a style="font-weight:200" asp-area="Identity" asp-page="/Account/Login">Login</a>
    
}

</div>
